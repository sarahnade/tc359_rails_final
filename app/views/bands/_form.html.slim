= form_for(@band) do |f|
  - if @band.errors.any?
    #error_explanation
      h2 = "#{pluralize(@band.errors.count, "error")} prohibited this band from being saved:"

      ul
        - @band.errors.full_messages.each do |message|
          li #{message}

  .field
    = f.label :name
    br
    = f.text_area :name

  .field
    = f.label :musicians
    br
    = f.number_field :musicians

  .field
    = f.label :website
    br
    = f.text_area :website

  .field
    = f.label :currently_together
    br
    = f.check_box :currently_together

  .actions
    = f.submit
